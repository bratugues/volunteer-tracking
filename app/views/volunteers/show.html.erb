<div class="row justify-content-center">
<h1 class = "mt-3 text-center"><%=@volunteer.name%></h1>
<hr>
  <%@volunteer.shifts.each do |shift|%>
  <div class="col-4">
    <div class="card h-100" style="width: 18rem;">
      <%= image_tag (shift.event.image_url), class: "card-img-top"%>
      <div class="card-body">
        <h5 class="card-title"><%=shift.event.name%></h5>
        <p class="card-text"><%=shift.feedback%></p>
        <%=link_to "Delete", volunteer_shift_path(@volunteer, shift), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <%end %>



<hr>


<%=link_to "Add new shift/event", new_volunteer_shift_path(@volunteer), class:"btn btn-primary mb-3"%>
<%=link_to "Back to all volunteers", volunteers_path, class:"btn btn-primary"%>
</div>
