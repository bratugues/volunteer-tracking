<div class="row justify-content-center text-center">
  <div class="col-4">
    <h1 class="mt-3 mb-3">Volunteers</h1>
    <div class="list-group">
      <%@volunteers.each do |volunteer|%>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%=link_to volunteer.name, volunteer_path(volunteer)%>
            <span class="badge bg-primary rounded-pill"><%=volunteer.shifts.count%></span>
          </li>
      <%end%>
    </div>
    <%=link_to "Create a new volunteer", new_volunteer_path, class:"btn btn-primary mt-3"%>
  </div>
</div>
